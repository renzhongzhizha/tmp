" Set <LEADER> as <SPACE>
let mapleader=" "


" 与windows共享剪贴板 
set clipboard+=unnamed

" 支持鼠标滑动
set mouse=a


set encoding=utf-8  " The encoding displayed.
set fileencoding=utf-8  " The encoding written to file.



noremap = nzz
noremap - Nzz
noremap <LEADER><CR> :nohlsearch<CR>

" load source vim   setting
map R :source ~/.config/nvim/init.vim<CR>


"总是显示状态行 
set laststatus=2


" Open the vimrc file anytime
map <LEADER>ev :e ~/.vim/vimrc<CR>

" Q mean quit
map Q :q<CR> 
" s mean nothing
" map s :<nop>

" Copy to system cl ipboard
" vnoremap Y :w !xclip -i -sel c<CR>


" Undo operations
noremap u u
" Undo undo
noremap U <C-r><CR>






" Duplicate words
map <LEADER>fd /\(\<\w\+\>\)\_s*\1


" Faster in-line navigation
noremap W 5w
noremap B 5b


" Duplicate words
map <LEADER>fd /\(\<\w\+\>\)\_s*\1


" Press space twice to  20 line down
map <LEADER><LEADER> 20j
" Press space + '-'   to 20 line up
map <LEADER>i 20k


"  split right and move cursor to right
map <LEADER>=  :set splitright<CR>:vsplit<CR>
"  split down and move cursor to  down
map <LEADER>-  :set splitbelow<CR>:split<CR>

"   move coursor to right
map <LEADER>l  <C-w>l
"   move coursor to  up
map <LEADER>k  <C-w>k
"   move coursor to down 
map <LEADER>j  <C-w>j
"   move coursor to  left
map <LEADER>h  <C-w>h
"  move cursor to previous
map <LEADER>w  <C-w>w


map <up> :res +5<CR>
map <down> :res -5<CR>
map <left> :vertical resize  -5<CR>
map <right> :vertical resize  +5<CR>



" Opening a terminal window
noremap <LEADER>/ :set splitbelow<CR>:split<CR>:res +10<CR>:term<CR>



" Auto change directory to current dir
autocmd BufEnter * silent! lcd %:p:h



" Call figlet
noremap tx :r !figlet

noremap <LEADER>6 :lN<CR>
noremap <LEADER>5 :lne<CR>

" find and replace
noremap \s :%s//g<left><left>













